@model IEnumerable<CourseManagement.Models.CourseModels.courses_student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"></h1>
        <a href="@Url.Action("PrintPDF", "CourseStudent")" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"><i class="fas fa-plus fa-sm text-white-50"></i> Export Student </a>
        
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <form method="get" action="@Url.Action("Index")">
                <div class="form-group form-inline">
                    <input type="text" name="name" class="form-control" placeholder="Input your keyword" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>

            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.cours.course_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.student.student_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.student.student_code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.courses_type.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.score)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.cours.course_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.student.student_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.student.student_code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.courses_type.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.score)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cours.course_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.student.student_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.student.student_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.courses_type.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.score)
                            </td>
                            <td>
                                @if (item.score == null)
                                {
                                    <a href="@Url.Action("Edit", "CourseStudent", new { id = item.id })" class="btn btn-info">
                                        <span class="fa fa-edit"></span> Mark
                                    </a>
                                }

                                @*<a href="@Url.Action("Details", "CourseStudent", new { id = item.id })" class="btn btn-info">
                                    <span class="fa fa-eye"></span> Details
                                </a>
                                <a href="@Url.Action("Delete", "CourseStudent", new { id = item.id })" class="btn btn-danger">
                                    <span class="fa fa-trash"></span> Delete
                                </a>*@

                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
                <br />

            </div>
        </div>
    </div>
</div>


