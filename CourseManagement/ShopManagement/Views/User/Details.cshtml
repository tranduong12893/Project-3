@model CourseManagement.Models.user

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Details</h6>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.user_name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.user_name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_role)
                    </dt>

                    <dd>
                        @{ 
                            var roleName = Model.user_role == 1 ? "Admin" : "User";
                        }
                        @Html.DisplayFor(model => roleName)
                    </dd>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                    </p>
                </dl>


            </div>
        </div>
    </div>

</div>

